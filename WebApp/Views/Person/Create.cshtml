@model WebApp.Models.Person

@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <h2 class="header-text">Cоздать новый</h2>
    <div class="row">
        <div class="col-lg-3"></div>
        <hr />
        <div class="col-lg-6">
            <h4>Новый человек</h4>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label">Фамилия</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label">Имя</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MiddleName" class="control-label">Отчество</label>
                    <input asp-for="MiddleName" class="form-control" />
                    <span asp-validation-for="MiddleName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Создать" class="btn btn-primary btn-block" />
                </div>
            </form>
        </div>
        <div class="col-lg-3"></div>
    </div>
    <div>
        <a asp-controller="Person" asp-action="Read">Назад к списку</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}